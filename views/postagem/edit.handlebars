<h1>Edição de postagem</h1>
<form action="/postagem/update" method="POST">
    <input type="hidden" name="id" value="{{postagem.id}}">
    <div class="form-group">
        <label for="titulo">Nome</label>
        <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control" id="titulo">
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name="slug" value="{{ postagem.slug }}" class="form-control" id="slug">
    </div>
    <div class="form-group">
        <label for="descricao">Descricação</label>
        <textarea class="form-control" name="descricao" id="descricao" rows="3">{{postagem.descricao}}</textarea>
    </div>
    <div class="form-group">
        <label for="categoria">Categoria</label>
        <select class="form-control" name="categoria" id="categoria">
            {{#each categorias }}
            <option value="{{_id}}">{{ nome  }}</option>
            {{/each }}
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
</form>