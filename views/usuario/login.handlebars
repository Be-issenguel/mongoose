{{>_msg }}
{{#each erros }}
<div class="alert alert-danger">{{nome}}</div>
{{/each }}
<div class="card col col-md-6 mt-5" style="margin: 0px auto;">
    <div class="card-body">
        <center>
            <h1>Login</h1>
        </center>
        <form action="/usuario/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder=" digite se emial">
            </div>
            <div class="form-group">
                <label for="pw1">Palavra-Passe</label>
                <input type="password" name="pw1" class="form-control" id="pw1" placeholder="palavra passe">
            </div>
            <a href="/usuario/add">crie sua conta</a>
            <button type="submit" class="btn btn-success btn-block mt-2">Entrar</button>
        </form>
    </div>
</div>