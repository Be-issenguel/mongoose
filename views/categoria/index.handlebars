<a href="/categoria/add" class="btn btn-success">Adicionar Categoria</a>
<h1>Listagem de categorias</h1>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Slug</th>
            <th scope="col">Data</th>
            <th scope="col">Opc√µes</th>
        </tr>
    </thead>
    <tbody>
        {{#each categorias}}
        <tr>
            <td>{{nome}}</td>
            <td>{{slug}}</td>
            <td>{{data}}</td>
            <td>
                <a href="/categoria/show/{{_id}}" class="btn btn-primary">Editar</a>
                <a href="/categoria/delete/{{_id}}" class="btn btn-danger">Remover</a>
            </td>
        </tr>
        {{/each }}
    </tbody>
</table>