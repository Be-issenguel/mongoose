{{#each erros}}
<div class="alert alert-danger" role="alert">
    {{ nome }}
</div>
{{/each }}
<h1>Editar categoria</h1>
<form action="/categoria/update" method="POST">
    <input type="hidden" name="id" value="{{ categoria._id }}">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" value="{{ categoria.nome }}" name="nome" id="nome"
            placeholder="nome da categoria">
    </div>
    <div class="form-group">
        <label for="slug">Password</label>
        <input type="text" name="slug" class="form-control" value="{{ categoria.slug }}" id="slug"
            placeholder="slug da categoria">
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>